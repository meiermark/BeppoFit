# Database Configuration
# (Default in docker-compose is postgres://beppo:password@db:5432/beppofit)
DATABASE_URL=postgres://beppo:password@localhost:5432/beppofit

# Email Configuration
# (Default in docker-compose is mailhog:1025)
SMTP_HOST=localhost
SMTP_PORT=1025

# Application Secrets (REQUIRED)
JWT_SECRET=change_me_to_a_secure_random_string
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Frontend URL (For redirects)
FRONTEND_URL=http://localhost:4200
